<?xml version="1.0"?>
<robot name="Didff_drive" xmlns:xacro="http://ros.org/wiki/xacro">

  <link name="base_footprint">
  </link>

  <link name="base_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.5 0.3 0.06"/>
      </geometry>
      <material name="Cyan">
        <color rgba="0 1.0 1.0 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.5 0.3 0.06"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <!-- <geometry>
        <box size="0.5 0.3 0.06"/>
      </geometry> -->
      <mass value="10"/>
      <inertia ixx="1.0"  ixy="0"  ixz="0" iyy="1.0" iyz="0" izz="1.0" />
      <!-- <inertia ixx="0.211"  ixy="0"  ixz="0" iyy="0.078" iyz="0" izz="0.283" /> -->
    </inertial>
  </link>

  <link name="right_wheel">
    <visual>
      <origin rpy="1.57075 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.05" radius="0.11"/>
      </geometry>
      <material name="Cyan">
        <color rgba="0 1.0 1.0 1.0"/>
      </material>
    </visual>
    <collision>
      <origin rpy="1.57075 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.05" radius="0.11"/>
      </geometry>
    </collision>
    <inertial>
      <origin rpy="1.57075 0 0" xyz="0 0 0"/>
      <!-- <geometry>
        <cylinder length="0.05" radius="0.11"/>
      </geometry> -->
      <mass value="10"/>
      <inertia ixx="1.0"  ixy="0"  ixz="0" iyy="1.0" iyz="0" izz="1.0" />
      <!-- <inertia ixx="0.0323"  ixy="0"  ixz="0" iyy="0.0323" iyz="0" izz="0.0605" /> -->
    </inertial>
  </link>

  <link name="left_wheel">
    <visual>
      <origin rpy="1.57075 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.05" radius="0.11"/>
      </geometry>
      <material name="Cyan">
        <color rgba="0 1.0 1.0 1.0"/>
      </material>
    </visual>
    <collision>
      <origin rpy="1.57075 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.05" radius="0.11"/>
      </geometry>
    </collision>
    <inertial>
      <origin rpy="1.57075 0 0" xyz="0 0 0"/>
      <!-- <geometry>
        <cylinder length="0.05" radius="0.11"/>
      </geometry> -->
      <mass value="10"/>
      <inertia ixx="1.0"  ixy="0"  ixz="0" iyy="1.0" iyz="0" izz="1.0" />
      <!-- <inertia ixx="0.0323"  ixy="0"  ixz="0" iyy="0.0323" iyz="0" izz="0.0605" /> -->
    </inertial>
  </link>

  <link name="castor_wheel">
    <visual>
      <origin rpy="1.57075 0 0" xyz="0 0 0"/>
      <geometry>
        <sphere radius="0.06"/>
      </geometry>
      <material name="Cyan">
        <color rgba="0 1.0 1.0 1.0"/>
      </material>
    </visual>
    <collision>
      <origin rpy="1.57075 0 0" xyz="0 0 0"/>
      <geometry>
        <sphere radius="0.06"/>
      </geometry>
    </collision>
    <inertial>
      <origin rpy="1.57075 0 0" xyz="0 0 0"/>
      <!-- <geometry>
        <sphere radius="0.06"/>
      </geometry> -->
      <mass value="10"/>
      <inertia ixx="1.0"  ixy="0"  ixz="0" iyy="1.0" iyz="0" izz="1.0" />
      <!-- <inertia ixx="0.0144"  ixy="0"  ixz="0" iyy="0.0144" iyz="0" izz="0.0144" /> -->
    </inertial>
  </link>


<!-- Joint -->

  <joint name="footprint_to_base" type="fixed">
    <origin rpy="0 0 0" xyz="0 0 0"/>
    <parent link="base_footprint"/>
    <child link="base_link"/>
  </joint>

  <joint name="base_to_right_wheel" type="continuous">
    <origin rpy="0 0 0" xyz="0.13 0.175 0"/>
    <parent link="base_link"/>
    <child link="right_wheel"/>
    <axis xyz="0 1 0"/>
  </joint>

  <joint name="base_to_left_wheel" type="continuous">
    <origin rpy="0 0 0" xyz="0.13 -0.175 0"/>
    <parent link="base_link"/>
    <child link="left_wheel"/>
    <axis xyz="0 1 0"/>
  </joint>

  <joint name="base_to_castor" type="continuous">
    <origin rpy="0 0 0" xyz="-0.19 0 -0.03"/>
    <parent link="base_link"/>
    <child link="castor_wheel"/>
    <axis xyz="0 1 0"/>
  </joint>


<!-- Transmission -->
  <transmission name="left_wheel_transmission">
    <type> transmission_interface/SimpleTransmission </type>
    <joint name="base_to_left_wheel">
      <!-- <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface> -->
      <hardwareInterface>VelocityJointInterface</hardwareInterface>
    </joint>
    <actuator name="left_wheel_actuator">
      <mechanicalReduction>7</mechanicalReduction>
      <!-- <hardwareInterface>VelocityJointInterface</hardwareInterface> -->
    </actuator>
  </transmission>

  <transmission name="right_wheel_transmission">
    <type> transmission_interface/SimpleTransmission </type>
    <joint name="base_to_right_wheel">
      <!-- <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface> -->
      <hardwareInterface>VelocityJointInterface</hardwareInterface>
    </joint>
    <actuator name="right_wheel_actuator">
      <mechanicalReduction>7</mechanicalReduction>
      <!-- <hardwareInterface>VelocityJointInterface</hardwareInterface> -->
    </actuator>
  </transmission>



<!-- Gazebo plugin for ROS Control -->
  <gazebo>
    <plugin name="gazebo_ros_control" filename="libgazebo_ros_control.so">
      <robotNamespace>/</robotNamespace>
    </plugin>
  </gazebo>

</robot>
